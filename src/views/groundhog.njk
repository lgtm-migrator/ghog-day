{% extends "layout.njk" %}

{% block body_classes -%}
  groundhog
{%- endblock %}

{% block content %}
  <div class="inner-content__header">
    <h1>{{ groundhog.name }}</h1>
    <div><a href="/groundhogs">‚Üê All groundhogs</a></div>
  </div>
  <div class="inner-content">
    <div class="inner-content__main">

      <aside class="current-prediction">
        {% if groundhog.predictions[0].shadow %}
          <span class="icon" aria-hidden="true">‚òÉÔ∏è</span>
          <span>This year, {{ groundhog.shortname }} predicted a <strong>longer winter</strong>.</span>
        {% else %}
          <span class="icon" aria-hidden="true">üå∑</span>
          <span>This year, {{ groundhog.shortname }} predicted an <strong>early spring</strong>.</span>
        {% endif %}
      </aside>

      <p>{{ groundhog.description }}</p>

      <div class="recent-predictions data-table">
        <table class="data-table__table">
          <caption>
            <h2 class="data-table__title">Recent predictions</h2>
          </caption>
          <thead>
            <tr>
              <th>Year</th>
              <th>Saw shadow?</th>
              <th>Prediction</th>
            </tr>
          </thead>
          <tbody>
            {% for prediction in groundhog.predictions %}
              {% if prediction.year >= 2018 %}
                <tr>
                  <th>{{ prediction.year }}</th>
                  <td>
                    {% if prediction.shadow %}
                      Yes, saw shadow.
                    {% else %}
                      Nope, no shadow.
                    {% endif %}
                  </td>
                  <td>
                    {% if prediction.shadow %}
                      <span aria-hidden="true">‚òÉÔ∏è</span> More winter! 
                    {% else %}
                      <span aria-hidden="true">üå∑</span> Early spring!
                    {% endif %}
                  </td>
                </tr>
              {% endif %}
            {% endfor %}
          </tbody>
        </table>
        <p class="all-predictions"><a href="/groundhogs/{{ groundhog.id }}/predictions">All {{ groundhog.predictions | length }} predictions ‚Üí</a></p>
      </div>

      <div class="other-formats">
        <h3>Other formats</h3>
        <ul class="with-bullets">
          <li>As a CSV</li>
          <li>API</li>
        </ul>
      </div>

    </div>
    <div class="inner-content__side">
      <div class="inner-content__side--container">
        <figure class="groundhog--image image">
          <img src="/images/ghogs/{{ groundhog.id }}-{{ groundhog.shortname | lower }}.png" alt="{{ groundhog.name }}" />
          <figcaption>{{ groundhog.name }}</figcaption>
        </figure>

        <!-- see if you can set a caption -->
        <dl class="groundhog--facts">
          <div>
            <dt>City:</dt>
            <dd>{{ groundhog.city }}</dd>
          </div>
          <div>
            {% if groundhog.country === 'USA' %}
              <dt>State:</dt>
            {% else %}
              <dt>Province:</dt>
            {% endif %}
            <dd>{{ groundhog.region }}</dd>
          </div>
          <div>
            <dt>Country:</dt>
            <dd>{{ groundhog.country }}</dd>
          </div>
          <div>
            <dt>Source:</dt>
            <dd>{{ groundhog.source | cleanUrl | safe  }}</dd>
          </div>
          <div>
            <dt>This year‚Äôs prediction:</dt>
            <dd>{{ groundhog.currentPrediction | cleanUrl | safe  }}</dd>
          </div>
        </dl>
      </div>
    </div>
  </div>

{% endblock %}