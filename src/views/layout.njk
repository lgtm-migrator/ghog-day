{%- from "macros/_get_the_data.njk" import get_the_data -%}
{%- from "macros/_icon.njk" import icon -%}
{%- from "macros/_nav.njk" import nav -%}
{%- from "macros/_page_header.njk" import page_header -%}
{%- from "macros/_groundhog_day_dot_com.njk" import site_title -%}

<!doctype html>
<html lang="en" id="html">
  <head>
    <title>
      {%- if title == 'GROUNDHOG-DAY.com' -%}
        {{ site_title({ title: true }) }}
      {%- else -%}
        {{ title }} — {{ site_title({ title: true }) }}
      {%- endif -%}
    </title>
    {% if GITHUB_SHA -%}
      <meta name="keywords" content="GITHUB_SHA={{ GITHUB_SHA }}" />
    {%- endif %}
    <meta name="robots" content="noindex" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    {% if pageMeta %}
      {%- if "description" in pageMeta -%}
        <meta name="description" content="{{ pageMeta.description }}" />
        <!-- Note: this could be half the size -->
        <meta property="og:description" content="{{ pageMeta.description }}" />
      {%- elif daysLeft -%}
        <meta name="description" content="The leading data source for Groundhog Day, with more than 40 prognosticators spanning more than a century. Only {{ daysLeft }} days until Groundhog Day 2023." />
      {%- endif %}
      {% if "canonical" in pageMeta -%}
        <link rel="canonical" href="{{ pageMeta.canonical }}" />
      {%- endif %}
      
      <!-- open graph tags -->
      <meta property="og:type" content="website" />
      {% if title == 'GROUNDHOG-DAY.com' -%}
        <meta property="og:title" content="GROUNDHOG-DAY.com" />
      {%- else -%}
        <meta property="og:title" content="{{ title }} — GROUNDHOG-DAY.com" />
      {%- endif %}
      {% if "canonical" in pageMeta -%}
        <meta property="og:url" content="{{ pageMeta.canonical }}" />
      {%- endif %}
      
      <!-- twitter card tags additive with the og: tags -->
      {%- if "image" in pageMeta -%}
        <meta property="og:image" content="{{ pageMeta.baseUrl }}images/ghogs/og-image/{{- pageMeta.image -}}.png" />
        <meta property="og:image:type" content="image/png" />
        <meta property="og:image:width" content="{{ pageMeta.imageWidth }}" />
        <meta property="og:image:height" content="{{ pageMeta.imageHeight }}" />
      {% else %}
        <meta property="og:image" content="{{ pageMeta.baseUrl }}images/og-image-ghog-day-2.png" />
        <meta property="og:image:type" content="image/png" />
        <meta property="og:image:width" content="1200" />
        <meta property="og:image:height" content="630" />
      {%- endif %}

        <meta name="twitter:card" content="summary" />
        <meta name="twitter:creator" content="@pcraig3" />
        <meta name="twitter:card" content="summary_large_image" />
      {%- if "image" in pageMeta -%}
        <meta name="twitter:image" content="{{ pageMeta.baseUrl }}images/ghogs/og-image/{{- pageMeta.image -}}.png" />
      {% else %}
        <meta name="twitter:image" content="{{ pageMeta.baseUrl }}images/og-image-ghog-day-2.png" />
      {%- endif %}
    {% endif %}

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400&family=Readex+Pro:wght@300;400;600&display=swap" rel="stylesheet">

    <link rel="stylesheet" type="text/css" href="/stylesheets/main.css" />

    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="manifest" href="/site.webmanifest">
  </head>
  <body class="{% block body_classes %}{% endblock %}">
    <header>
      <a class="logo" href="/" aria-label="Groundhog-Day.com">
        <img src="/images/logo.png" class="logo--img" alt="" />
        <span aria-hidden="true">Groundhog<span class="letter-spacing--less">-</span>D<span class="letter-spacing--less">a</span>y.com</span>
      </a>
      <div class="header--right">
        <a class="link--icon hidden--mobile" href="/predictions">
          <span>2022 predictions </span><span class="icon icon--right" aria-hidden="true">{{ icon({ right: true }) }}</span></a>
      </div>
    </div>
    </header>

    <nav>
      <details class="nav--sm">
        <summary>Menu</summary>
        {{ nav({ path: path, groundhog: groundhog }) }}
      </details>
      <div class="nav--md">
        {{ nav({ path: path, groundhog: groundhog }) }}
      </div>
    </nav>
    {# <aside>Aside</aside> #}
    <main>
      {% block content %}{% endblock %}
    </main>
    <footer>
      <div class="body-text">
        <div id="back-to-top">
          <a href="#html" class="link--icon underline">
            {{ icon({ up: true }) }} <span>Back to top<span></a>
          </a>
        </div>
        </div>
      </div>
    </footer>
  </body>
</html>