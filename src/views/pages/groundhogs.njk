{% extends "layout.njk" %}

{% block body_classes -%}
  groundhogs
{%- endblock %}

{% block footer_scripts %}
  <script src="/javascripts/vendor/list.min.js"></script>
  <script>
    new List('sortable--groundhogs', {
      valueNames: ['name', 'region', 'country', 'latest', 'count']
    });
  </script>
{% endblock %}

{% block content %}
  {{ page_header({ h1: title, backUrl: '/', backText: 'Home', dataUrl: '/api/v1/groundhogs/' }) }}

  <div class="inner-content">
    <div class="inner-content__main">
      <div class="max-width--850">
        <p>There are <strong>{{ groundhogs | length }}</strong> weather-predicting groundhogs who made predictions in 2022.</p>
        <p>If you don‚Äôt see your favourite prognosticator, feel free to
          <a class="link--icon" href="add-groundhog">
            {{ icon({ add: true }) }} <span>add a groundhog</span>
          </a>.
        </p>
      </div>
      <div id="sortable--groundhogs">
        <form role="search" class="sortable--groundhogs--search--container">
          <label for="sortable--groundhogs--search">Find groundhogs by name:</label>
          <input id="sortable--groundhogs--search" class="search" placeholder="Search‚Ä¶" type="search" />
        </form>

        <div class="groundhogs data-table" role="region" aria-labelledby="data-table--groundhogs" tabindex="0">
          <table class="data-table__table">
            <caption id="data-table--groundhogs">
              <h2 class="data-table__title h4">All groundhogs</h2>
            </caption>
            <thead class="visible">
              <tr>
                <th class="sort" data-sort="name">Name</th>
                <th class="sort" data-sort="region">Region</th>
                <th class="sort" data-sort="country">Country</th>
                <th class="sort" data-sort="latest">Latest prediction</th>
                <th class="sort" data-sort="count">Total predictions</th>
              </tr>
            </thead>
            <tbody class="list">
              {% for groundhog in groundhogs %}
                <tr onclick="window.location='/groundhogs/{{ groundhog.slug }}';">
                  <th class="name"><a href="/groundhogs/{{ groundhog.slug }}" class="underline">{{ groundhog.name }}</a></th>
                  <td class="region">
                    {{ groundhog.region }}
                  </td>
                  <td class="country">
                    {{ groundhog.country }}
                  </td>
                  <td class="latest">
                    {% if groundhog.latestPrediction.shadow %}
                      <span role="img" aria-label="Longer winter">‚ùÑÔ∏è</span>
                    {% else %}
                      <span role="img" aria-label="Early spring">üåº</span>
                    {% endif %}
                  </td>
                  <td class="count">
                    {{ groundhog.predictionsCount }}
                  </td>
                </tr>
              {% endfor %}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
{% endblock %}
