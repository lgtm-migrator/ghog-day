{% extends "layout.njk" %}

{% block body_classes -%}
  groundhog
{%- endblock %}

{% block content %}
  {{ page_header({ h1: groundhog.name, backUrl: '/groundhogs', backText: 'All groundhogs' }) }}

  <div class="inner-content inner-content--with-summary">
    <div class="description">
      <aside class="highlight">
        {% if groundhog.predictions[0].shadow %}
          <div class="icon"><span aria-hidden="true">‚òÉÔ∏è</span></div>
          <div class="message"><span>This year, {{ groundhog.shortname }} predicted a <strong>longer winter</strong>.</span></div>
        {% else %}
          <div class="icon"><span aria-hidden="true">üå∑</span></div>
          <div class="message"><span>This year, {{ groundhog.shortname }} predicted an <strong>early spring</strong>.</span></div>
        {% endif %}
      </aside>

      <p>{{ groundhog.description }}</p>
    </div>

    <div class="summary">
      <div class="inner-content__side--container">
        <figure class="groundhog--image image">
          <img src="/images/ghogs/{{ groundhog.id }}-{{ groundhog.shortname | lower }}.png" alt="{{ groundhog.name }}" />
          <figcaption>{{ groundhog.name }}</figcaption>
        </figure>

        <div class="groundhog--residence">
          <div class="subhead">Resides in</div>
          <div class="text">
            {{ groundhog.city }}, {{ groundhog.region }}, {{ groundhog.country }}
          </div>
        </div>
        <div class="groundhog--source">
          <a href="{{ groundhog.source }}" target="_blank" class="underline">Source</a>
          <a href="{{ groundhog.currentPrediction }}" target="_blank" class="underline">Latest prediction</a>
        </div>
      </div>
    </div>

    <div class="predictions overflow-x">
      <div class="recent-predictions data-table" role="region" aria-labelledby="data-table--recent-predictions">
        <table class="data-table__table">
          <caption id="data-table--recent-predictions">
            <h2 class="data-table__title">Recent predictions</h2>
          </caption>
          <thead>
            <tr>
              <th>Year</th>
              <th class="hidden--mobile-xs">Saw shadow?</th>
              <th>Prediction</th>
            </tr>
          </thead>
          <tbody>
            {%- for prediction in groundhog.predictions -%}
              {% if prediction.year >= 2018 %}
                <tr>
                  <th>{{ prediction.year }}</th>
                  <td class="hidden--mobile-xs">
                    {% if prediction.shadow -%}
                      Yes, saw shadow.
                    {%- else -%}
                      Nope, no shadow.
                    {%- endif %}
                  </td>
                  <td>
                    {%- if prediction.shadow %}
                      <span aria-hidden="true">‚òÉÔ∏è</span> More winter! 
                    {% else %}
                      <span aria-hidden="true">üå∑</span> Early spring!
                    {% endif -%}
                  </td>
                </tr>
              {% endif %}
            {%- endfor -%}
          </tbody>
        </table>
        <p class="all-predictions"><a href="/groundhogs/{{ groundhog.id }}/predictions" class="underline-mobile">All {{ groundhog.predictions | length }} predictions <span aria-hidden="true">‚Üí</span></a></p>
      </div>
    </div>

    <div class="data">
      <div class="get-the-data">
        <h3 id="get-the-data">Get the data</h3>
        <ul class="button-list">
          <li><a href="/api/v1/groundhogs/{{ groundhog.id }}/" class="link-button" target="_blank">As JSON</a></li>
          <li><button disabled>As a CSV (soon)</button></li>
        </ul>
      </div>
    </div>

  </div>

{% endblock %}
